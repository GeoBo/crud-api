{
  "version": "0.2.0",

  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "WatchDebug",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "WatchBuild",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/webpack/bin/webpack.js",
      "args": ["--watch"],
      "sourceMaps": true,
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Testing",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["--watch"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "run debug",
      "configurations": ["WatchBuild", "WatchDebug"]
    }
  ]
}